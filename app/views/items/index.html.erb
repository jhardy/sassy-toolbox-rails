<h1>Listing items</h1>

<ul id="gallery">
   <% @items.each do |item| %>

    <li class="card">
        <span>
          <h1 class="card-title">
            <%= link_to item.name, "https://github.com/#{item.user}/#{item.reponame}" %>
            <%= link_to item.user, "/users/#{item.user}", :class => 'username' %>
  
          </h1>

          <p class="card-description"><%= item.description %></p>

          <ul class="tags">
            <% item.tags.each do |tag| %>
             <li><a href=""><%= tag %></a></li>
            <% end %>
          </ul>

          <ul class="ghub-info">
            <li>Last Updated: 12/34/56</li>
            <li>Github Stars: 9,999</li>
          </ul>
        </span>
      </li>
   <% end %>
</ul>



<br>

<%= link_to 'New Item', new_item_path %>
